<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="post" action="/users/create-user">

                    <div class="mt-3 mb-3">
                        <h3>Create a new user:</h3>
                    </div>
                    <div class="form-group mt-3 mb-3 col-6">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="form-group mt-3 mb-3 col-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="form-group mt-3 mb-3 col-6">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </form>
            </div>
            <div class="table-users mt-3">
                <h3>Table users:</h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%=item.id%>
                                </th>
                                <td>
                                    <%=item.username%>
                                </td>
                                <td>
                                    <%=item.email%>
                                </td>
                                <td>
                                    <form action="/update-user/<%= item.id%>" method="get" style="display:inline;">
                                        <button type="submit" class="btn btn-warning"
                                            style="margin-right: 10px;">Edit</button>
                                    </form>

                                    <form action="/delete-user/<%= item.id%>" method="post" style="display:inline;">
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>